{
  "name": "express-ts-starter",
  "version": "1.0.0",
  "description": "Express starter",
  "main": "server.js",
  "scripts": {
    "dev": "NODE_ENV=development nodemon",
    "start": "node dist/server.js",
    "build": "rm -rf dist && NODE_OPTIONS='--max-old-space-size=4096' tsc",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "pre-commit": "lint-staged",
    "prepare": "husky"
  },
  "author": "Khalid Elshafie",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "winston": "^3.15.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.7.9",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.13.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.1.6",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.10",
    "nodemon": "^3.1.7",
    "prettier": "^3.3.3",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.12.2"
  },
  "lint-staged": {
    "src/**/*.(ts|tsx)": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
